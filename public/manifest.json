{
    "manifest_version": 3,
    "name": "Keyless (Alpha)",
    "description": "Sign messages reducing your risks",
    "version": "1.0",
    "icons": {
      "32": "icon_nb_32.png",
      "48": "icon_nb_48.png",
      "128": "icon_nb_128.png"
    },
    "action": {
      "default_icon": "icon_nb_32.png",
      "default_popup": "popup.html",
      "default_title": "Keyless (Alpha)"
    },
    "content_scripts": [
      {
        "matches": [
          "<all_urls>"
        ],
        "js": [
          "js/vendor.js",
          "js/content.js"
        ]
      }
    ],
    "background": {
      "service_worker": "js/background.js",
      "type": "module"
    },
    "permissions": [
      "storage",
      "activeTab",
      "scripting",
      "tabs"
    ],
    "web_accessible_resources": [
      {
        "resources": [
          "js/attachKeylessExtension.js",
          "js/requestMetamask.js"
        ],
        "matches": [
          "<all_urls>"
        ]
      }
    ]
  }
